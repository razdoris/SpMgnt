{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | détails offre{% endblock %}

{% block body %}
    <h1>détail de l'offre :</h1>

    <table class="tableAdminDetail">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ presentation_offer_description.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ presentation_offer_description.name }}</td>
            </tr>
            <tr>
                <th>feature</th>
                <td>
                    <ul>
                        {% for feature in presentation_offer_description.features%}
                            <li>{{ feature.featureName }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ presentation_offer_description.lowPrice }} - {{ presentation_offer_description.hightPrice }} / {{ presentation_offer_description.periodicity }}</td>
            </tr>
            <tr>
                <th>subject</th>
                <td>{{ presentation_offer_description.contactSubject.subjectText }}</td>
            </tr>
            <tr>
                <th>image</th>
                <td><img src="{{ asset('images/uploads/offerIllustrations/' ~ presentation_offer_description.imageName) }}"/></td>
            </tr>
        </tbody>
    </table>
    {{ include('admin/_formCRUD/_delete_form.html.twig',{'pathUrl': 'admin_offer_offer_description_delete', 'id':  presentation_offer_description.id}) }}

    <div class="linkAdmin">
        <a href="{{ path('admin_offer_offer_description_index') }}">back to list</a>
        <a href="{{ path('admin_offer_offer_description_edit', {'id': presentation_offer_description.id}) }}">edit</a>
    </div>
{% endblock %}
