{% extends 'admin/adminBase.html.twig' %}

{% block title %}{{ parent() }} | Détails article{% endblock %}

{% block body %}
    <h1>Détail de l'article :</h1>

    <table class="tableAdminDetail">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ presentation_blog_article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ presentation_blog_article.title }}</td>
            </tr>
            <tr>
                <th>Preview</th>
                <td>{{ presentation_blog_article.preview|raw }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ presentation_blog_article.content|raw }}</td>
            </tr>
            <tr>
                <th>Publishing Date</th>
                <td>{{ presentation_blog_article.date|date('d/m/y') }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ presentation_blog_article.author }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ presentation_blog_article.categorie.label }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td><img src="{{ asset('images/uploads/blog/articleIllustrations/') ~ presentation_blog_article.imageName}}" alt="image de d'illustration du blog"/></td>
            </tr>
        </tbody>
    </table>

    {% set pathUrl =  'admin_blog_article'%}
    {% set IdObject = presentation_blog_article.id %}
    {{ include('admin/_formCRUD/_delete_form.html.twig',{'pathUrl': pathUrl, 'id':  IdObject}) }}
    {{ include('admin/_inc/_footerShow.html.twig',{'pathUrl': pathUrl, 'id':  IdObject}) }}

{% endblock %}
