{% extends 'application/applicationBase.html.twig' %}

{% block title %}Calendrier {{ parent() }}{% endblock %}


{% block body %}

    <div class="inlineDiv withGradient" id="calendarCalendar">

    </div>
    <div class="inlineDiv withGradient" id="legendContainer">
        <h3>Legende</h3>
        <ul>
            {%  for typeEvent in typesEventsList %}
                <li>
                    <img class="iconLegend" src="{{ asset('Icons/EventsType/' ~ typeEvent.icon) }}" alt="icon de l'evenement">
                    <label class="labelLegend">{{ typeEvent.label }}</label>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="inlineDiv withGradient" id="addNewEventContainer">
       Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet aperiam autem cumque, dignissimos ducimus impedit itaque nam nisi nobis, obcaecati officia officiis placeat provident rem repellat vero vitae? Fugit, non?
