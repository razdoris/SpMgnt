        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Aut est, fugiat fugit, harum illum, ipsa itaque laboriosam laudantium minus modi obcaecati pariatur quisquam ratione repellat similique sit velit voluptates voluptatibus?
    </div>
    <div class="inlineDiv withGradient halfContainer chartContainer" id="assiduityMatchContainer">
        <div class="tableDiv" id="assiduityMatchTable">
            <table class="teamRanking">
                <caption>taux de presence au matchs</caption>
                <thead>
                <tr>
                    <th>Nom Prenom</th>
                    <th>Prés.</th>
                    <th>Indis.</th>
                    <th>Abs.</th>
                    <th>Ret</th>
                </tr>
                </thead>
                <tbody>
                {% for i in 1..9 %}
                    <tr class="ligneMatch">
                        <td class="nomeMatchPractice">{{ random(['Lorem', 'ipsum', 'dolor', 'sit amet', 'consectetur',
                                'adipisicing', 'Minus', 'praesentium', 'sed unde', 'veritatis',
                                'Asperiores', 'delectus', 'iste nam', 'similique', ]) }}</td>
                        <td class="presenceMatchPractice">{{ random(25) }}</td>
                        <td class="absenceMatchPractice">{{ random(15) }}</td>
                        <td class="indispoMatchPractice">{{ random(25) }}</td>
                        <td class="retardMatchPractice">{{ random(5) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="chartDiv hide chartDivMatch" id="assiduityMatchChart">
            <canvas class="canevaChart" id="canvasAssiduityMatch" width="10px" height="10px"></canvas>
        </div>
    </div>
    <div class="inlineDiv withGradient halfContainer chartContainer" id="assiduityPracticeContainer">
        <div class="tableDiv" id="assiduityMatchTable">
            <table class="teamRanking">
                <caption>taux de presence au entrainement</caption>
                <thead>
                <tr>
                    <th>Nom Prenom</th>
                    <th>Prés.</th>
                    <th>Indis.</th>
                    <th>Abs.</th>
                    <th>Ret</th>
                </tr>
                </thead>
                <tbody>
                {% for i in 1..9 %}
                    <tr>
                        <td class="nomeMatchPractice">{{ random(['Lorem', 'ipsum', 'dolor', 'sit amet', 'consectetur',
                                'adipisicing', 'Minus', 'praesentium', 'sed unde', 'veritatis',
                                'Asperiores', 'delectus', 'iste nam', 'similique', ]) }}</td>
                        <td class="presenceMatchPractice">{{ random(25) }}</td>
                        <td class="absenceMatchPractice">{{ random(15) }}</td>
                        <td class="indispoMatchPractice">{{ random(25) }}</td>
                        <td class="retardMatchPractice">{{ random(5) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="chartDiv hide chartDivPractice" id="assiduityPracticeChart">
            <canvas class="canevaChart" id="canvasAssiduityPractice" width="10px" height="10px"></canvas>
        </div>
    </div>

{% endblock %}

{% block extraStyle %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.css">
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.js"></script>
    <script src="{{ asset('js/calendar.js') }}"></script>
    {# <script src="{{ asset('js/apiFootball.js') }}"></script> #}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js"
            integrity="sha512-Wt1bJGtlnMtGP0dqNFH1xlkLBNpEodaiQ8ZN5JLA5wpc1sUlk/O5uuOMNgvzddzkpvZ9GLyYNa8w2s7rqiTk5Q=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="{{ asset('js/charts.js') }}"></script>
{% endblock %}
